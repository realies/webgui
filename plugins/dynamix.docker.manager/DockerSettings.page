function changeCustom(id,ip) {
  var checked = $('#'+id).prop('checked');
  var device = id.substr(0,id.length-5).split('_').splice(2,2).join('.').toLowerCase();
  var user = $('input:hidden[name="DOCKER_CUSTOM_NETWORKS"]');
