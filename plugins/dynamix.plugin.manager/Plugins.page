    if (data[1]>0) $('#updateall').show(); else $('#updateall').hide();
<?if ($check):?>
    $('#checkall').find('input').prop('disabled',false).show();
<?endif;?>
  });
}
function spinner() {
  $('#plugin_list').append("<div class='spinner fixed'></div>");
  $('div.spinner').html(unraid_logo).show('slow');
}
$(function() {
