<script>
$("#NAME").keypress(function(event) {
	return event.key.match(/[A-Za-z0-9\-\.]/)!==null;
});
$("#NAME").on("input change", function() {
	if ($(this).val().match(/<?=$name_regex;?>/) === null) {
		$('#name_warning').fadeIn('fast');
	} else {
		$('#name_warning').fadeOut('fast');
	}
});
</script>
