function showCopy(checked) {
  if ($('select[name="input"]').val()=='file') return;
  var text = $('input[name="text"]').val();
  var copy = $('input[name="copy"]').val();
  if (forced || checked) {
    $('#copy').show();
    toggleStart(text!=copy || text=='');
  }  else {
    $('#copy').hide();
    toggleStart(text=='');
  }
}
function getFileContent(event,form) {
